<Page x:Class="Computer.Pages.Reg"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Computer.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="200"
      Title="Reg">

	<StackPanel>
		<TextBlock Text="Регистрация" FontSize="24" FontWeight="Bold"/>
		<TextBlock Text="Логин" HorizontalAlignment="Left"/>
		<TextBox Name="TbLogin"/>
		<TextBlock Text="Пароль" HorizontalAlignment="Left"/>
		<PasswordBox Name="PbPassword"/>
		<Button Content="Зарегистрироваться" Click="BtnReg_OnClick"/>
	</StackPanel>
</Page>
