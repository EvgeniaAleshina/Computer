<Page x:Class="Computer.Pages.EditPages.ManufactureEditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d" 
      d:DesignHeight="80" d:DesignWidth="300"
			VerticalAlignment="Center" HorizontalAlignment="Center"
      Title="ManufactureEditPage">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"/>
			<ColumnDefinition Width="2*"/>
		</Grid.ColumnDefinitions>

		<TextBlock Text="Название" Grid.Row="0"/>

		<TextBox Name="TbTitle" Grid.Row="0" Grid.Column="1" Text="{Binding Title}"/>

		<Button Name="BtnAdd" Click="BtnAdd_OnClick"  Content="Добавить"  Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="0" />
	</Grid>
</Page>
